<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SplashSelectorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/yuz_tanima_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yuz_tanima"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kapi_sifresini_girin"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/kapiAcText1Container"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/black_bordered_btn_bg"
                android:gravity="center">

                <TextView
                    android:id="@+id/kapiAcText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/kapiAcText2Container"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/kapiAcText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/kapiAcText3Container"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/kapiAcText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/kapiAcText4Container"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/kapiAcText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>