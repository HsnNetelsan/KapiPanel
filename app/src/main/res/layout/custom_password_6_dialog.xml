<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/sifre"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/customPasswordTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/yonetici_sifresini_giriniz"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/sifreDialogText1Container"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/black_bordered_btn_bg"
                android:gravity="center">

                <TextView
                    android:id="@+id/sifreDialogText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sifreDialogText2Container"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/sifreDialogText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sifreDialogText3Container"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/sifreDialogText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sifreDialogText4Container"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/sifreDialogText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sifreDialogText5Container"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/sifreDialogText5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sifreDialogText6Container"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/sifreDialogText6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="25sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>